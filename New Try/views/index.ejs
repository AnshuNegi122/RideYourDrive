            </div>
            
            <!-- Vehicle Card 3 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="h-48 bg-gray-300">
                <img src="/images/car2.jpg" alt="SUV" class="w-full h-full object-cover">
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">Jeep Wrangler</h3>
                <p class="text-gray-600 mb-4">Rugged SUV for off-road adventures and exploration.</p>
                <div class="flex justify-between items-center">
                  <span class="text-blue-600 font-bold">$75/day</span>
                  <a href="/register" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">Rent Now</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% } %>
    
    <!-- Testimonials Section -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">What Our Users Say</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Testimonial 1 -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gray-300 rounded-full mr-4"></div>
              <div>
                <h4 class="font-bold">John Doe</h4>
