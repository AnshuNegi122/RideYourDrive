<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Vehicles - Vehicle Rental</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('partials/header') %>
  
  <main class="container mx-auto px-4 py-12">
    <!-- Search Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-bold mb-4">Find Your Perfect Vehicle</h2>
      
      <form action="/search" method="GET" class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <div class="md:col-span-1">
          <label for="pickupLocation" class="block text-gray-700 mb-2">Pick Up Location</label>
          <select id="pickupLocation" name="pickupLocation" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <% locations.forEach(location => { %>
              <option value="<%= location._id %>" <%= selectedPickup === location._id.toString() ? 'selected' : '' %>><%= location.name %></option>
            <% }); %>
          </select>
        </div>
        
        <div class="md:col-span-1">
          <label for="dropoffLocation" class="block text-gray-700 mb-2">Drop Off Location</label>
          <select id="dropoffLocation" name="dropoffLocation" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <% locations.forEach(location => { %>
              <option value="<%= location._id %>" <%= selectedDropoff === location._id.toString() ? 'selected' : '' %>><%= location.name %></option>
            <% }); %>
          </select>
        </div>
        
        <div class="md:col-span-1">
          <label for="startDate" class="block text-gray-700 mb-2">Pick Up Date</label>
          <input type="date" id="startDate" name="startDate" value="<%= startDate %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="md:col-span-1">
          <label for="endDate" class="block text-gray-700 mb-2">Return Date</label>
          <input type="date" id="endDate" name="endDate" value="<%= endDate %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="md:col-span-1">
          <label class="block text-gray-700 mb-2">&nbsp;</label>
          <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
            Search
          </button>
        </div>
      </form>
    </div>
    
    <!-- Filters -->
    <div class="flex flex-col md:flex-row gap-8">
      <div class="md:w-1/4">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-4">
          <h3 class="text-lg font-bold mb-4">Filters</h3>
          
          <form action="/search" method="GET" id="filterForm">
            <!-- Hidden fields to preserve search params -->
            <input type="hidden" name="pickupLocation" value="<%= selectedPickup %>">
            <input type="hidden" name="dropoffLocation" value="<%= selectedDropoff %>">
            <input type="hidden" name="startDate" value="<%= startDate %>">
            <input type="hidden" name="endDate" value="<%= endDate %>">
            
            <div class="mb-4">
              <h4 class="font-semibold mb-2">Vehicle Type</h4>
              <div class="space-y-2">
                <label class="flex items-center">
                  <input type="radio" name="type" value="all" <%= !type || type === 'all' ? 'checked' : '' %> class="mr-2" onchange="document.getElementById('filterForm').submit()">
                  <span>All</span>
                </label>
                <label class="flex items-center">
                  <input type="radio" name="type" value="car" <%= type === 'car' ? 'checked' : '' %> class="mr-2" onchange="document.getElementById('filterForm').submit()">
                  <span>Cars</span>
                </label>
                <label class="flex items-center">
                  <input type="radio" name="type" value="bike" <%= type === 'bike' ? 'checked' : '' %> class="mr-2" onchange="document.getElementById('filterForm').submit()">
                  <span>Bikes</span>
                </label>
              </div>
            </div>
            
            <div class="mb-4">
              <h4 class="font-semibold mb-2">Price Range</h4>
              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <span>$<span id="minPriceDisplay"><%= minPrice %></span></span>
                  <span>$<span id="maxPriceDisplay"><%= maxPrice %></span></span>
                </div>
                <div class="flex space-x-4">
                  <input type="range" id="minPrice" name="minPrice" min="0" max="500" value="<%= minPrice %>" class="w-1/2" oninput="updatePriceRange()">
                  <input type="range" id="maxPrice" name="maxPrice" min="0" max="500" value="<%= maxPrice %>" class="w-1/2" oninput="updatePriceRange()">
                </div>
                <button type="submit" class="mt-2 w-full bg-gray-200 hover:bg-gray-300 text-gray-800 py-1 px-3 rounded text-sm">Apply</button>
              </div>
            </div>
            
            <div class="mb-4">
              <h4 class="font-semibold mb-2">Sort By</h4>
              <select name="sort" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" onchange="document.getElementById('filterForm').submit()">
                <option value="price_asc" <%= sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest First</option>
              </select>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Search Results -->
      <div class="md:w-3/4">
        <h2 class="text-2xl font-bold mb-6">Available Vehicles</h2>
        
        <% if (vehicles.length === 0) { %>
          <div class="bg-white rounded-lg shadow-md p-8 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-xl font-bold mb-2">No Vehicles Found</h3>
            <p class="text-gray-600 mb-4">We couldn't find any vehicles matching your search criteria.</p>
            <p class="text-gray-600">Try adjusting your filters or search for a different location or date.</p>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <% vehicles.forEach(vehicle => { %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="md:flex">
                  <div class="md:w-2/5 h-48 md:h-auto bg-gray-200">
                    <% if (vehicle.images && vehicle.images.length > 0) { %>
                      <img src="/<%= vehicle.images[0] %>" alt="<%= vehicle.make %> <%= vehicle.model %>" class="w-full h-full object-cover">
                    <% } else { %>
                      <div class="w-full h-full flex items-center justify-center text-gray-500">No image</div>
                    <% } %>
                  </div>
                  <div class="md:w-3/5 p-6">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="text-lg font-bold"><%= vehicle.make %> <%= vehicle.model %></h3>
                      <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded"><%= vehicle.type.charAt(0).toUpperCase() + vehicle.type.slice(1) %></span>
                    </div>
                    <p class="text-gray-600 mb-2"><%= vehicle.year %> â€¢ <%= vehicle.companyId.name %></p>
                    <p class="text-gray-700 mb-4 line-clamp-2"><%= vehicle.description %></p>
                    <div class="flex justify-between items-center">
                      <span class="text-lg font-bold text-blue-600">$<%= vehicle.price %>/day</span>
                      <a href="/vehicles/<%= vehicle._id %>?pickupLocation=<%= selectedPickup %>&dropoffLocation=<%= selectedDropoff %>&startDate=<%= startDate %>&endDate=<%= endDate %>" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">View Details</a>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>
  </main>
  
  <%- include('partials/footer') %>
  
  <script>
    // Set minimum dates for booking
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date();
      const tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      
      const startDateInput = document.getElementById('startDate');
      const endDateInput = document.getElementById('endDate');
      
      if (startDateInput && endDateInput) {
        // Format date as YYYY-MM-DD
        const formatDate = (date) => {
          const year = date.getFullYear();
          const month = String(date.getMonth() + 1).padStart(2, '0');
          const day = String(date.getDate()).padStart(2, '0');
          return `${year}-${month}-${day}`;
        };
        
        startDateInput.min = formatDate(today);
        
        startDateInput.addEventListener('change', function() {
          const selectedDate = new Date(this.value);
          const nextDay = new Date(selectedDate);
          nextDay.setDate(nextDay.getDate() + 1);
          
          endDateInput.min = formatDate(nextDay);
          
          // If end date is before start date, reset it
          if (new Date(endDateInput.value) <= selectedDate) {
            endDateInput.value = formatDate(nextDay);
          }
        });
      }
    });
    
    // Update price range display
    function updatePriceRange() {
      const minPrice = document.getElementById('minPrice').value;
      const maxPrice = document.getElementById('maxPrice').value;
      
      document.getElementById('minPriceDisplay').textContent = minPrice;
      document.getElementById('maxPriceDisplay').textContent = maxPrice;
      
      // Ensure min price is not greater than max price
      if (parseInt(minPrice) > parseInt(maxPrice)) {
        document.getElementById('maxPrice').value = minPrice;
        document.getElementById('maxPriceDisplay').textContent = minPrice;
      }
    }
  </script>
</body>
</html>
