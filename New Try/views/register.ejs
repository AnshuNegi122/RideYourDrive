<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - Vehicle Rental</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('partials/header') %>
  
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
      <h1 class="text-2xl font-bold text-center mb-6">Create an Account</h1>
      
      <% if (error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/register" method="POST">
        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-medium mb-2">Full Name</label>
          <input type="text" id="name" name="name" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-4">
          <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-4">
          <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
          <input type="password" id="password" name="password" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-6">
          <label class="block text-gray-700 font-medium mb-2">Account Type</label>
          <div class="grid grid-cols-2 gap-4">
            <div class="border rounded-lg p-4 cursor-pointer hover:border-blue-500 hover:bg-blue-50" onclick="selectUserType('renter', this)">
              <input type="radio" id="renter" name="userType" value="renter" class="hidden" required>
              <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <h3 class="font-semibold">Renter</h3>
                <p class="text-sm text-gray-500">I want to rent vehicles</p>
              </div>
            </div>
            
            <div class="border rounded-lg p-4 cursor-pointer hover:border-blue-500 hover:bg-blue-50" onclick="selectUserType('owner', this)">
              <input type="radio" id="owner" name="userType" value="owner" class="hidden">
              <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <h3 class="font-semibold">Owner</h3>
                <p class="text-sm text-gray-500">I want to list my vehicles</p>
              </div>
            </div>
          </div>
        </div>
        
        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Create Account</button>
      </form>
      
      <p class="text-center mt-6 text-gray-600">
        Already have an account? <a href="/login" class="text-blue-600 hover:underline">Login</a>
      </p>
    </div>
  </main>
  
  <%- include('partials/footer') %>
  
  <script>
    function selectUserType(type, element) {
      // Reset all
      document.querySelectorAll('[name="userType"]').forEach(radio => {
        radio.checked = false;
        radio.parentElement.classList.remove('border-blue-500', 'bg-blue-50');
      });
      
      // Select the clicked one
      document.getElementById(type).checked = true;
      element.classList.add('border-blue-500', 'bg-blue-50');
    }
  </script>
</body>
</html>
