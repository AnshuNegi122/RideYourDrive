<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= vehicle.make %> <%= vehicle.model %> - Vehicle Rental</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('partials/header') %>
  
  <main class="container mx-auto px-4 py-12">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <!-- Vehicle Images -->
      <div class="relative h-96 bg-gray-200">
        <% if (vehicle.images && vehicle.images.length > 0) { %>
          <div class="h-full">
            <img src="/<%= vehicle.images[0] %>" alt="<%= vehicle.make %> <%= vehicle.model %>" class="w-full h-full object-cover" id="mainImage">
          </div>
          
          <% if (vehicle.images.length > 1) { %>
            <div class="absolute bottom-4 left-0 right-0 flex justify-center space-x-2">
              <% vehicle.images.forEach((image, index) => { %>
                <button onclick="changeImage('<%= image %>', this)" class="h-16 w-16 border-2 <%= index === 0 ? 'border-blue-500' : 'border-white' %> rounded overflow-hidden">
                  <img src="/<%= image %>" alt="Thumbnail" class="w-full h-full object-cover">
                </button>
              <% }); %>
            </div>
          <% } %>
        <% } else { %>
          <div class="w-full h-full flex items-center justify-center text-gray-500">No image available</div>
        <% } %>
      </div>
      
      <div class="p-6">
        <div class="flex flex-col md:flex-row justify-between mb-6">
          <div>
            <div class="flex items-center mb-2">
              <h1 class="text-3xl font-bold mr-3"><%= vehicle.make %> <%= vehicle.model %></h1>
              <span class="bg-blue-100 text-blue-800 text-sm font-semibold px-2.5 py-0.5 rounded"><%= vehicle.type.charAt(0).toUpperCase() + vehicle.type.slice(1) %></span>
            </div>
            <p class="text-gray-600"><%= vehicle.year %> â€¢ Listed by <%= vehicle.companyId.name %></p>
          </div>
          
          <div class="mt-4 md:mt-0">
            <div class="text-3xl font-bold text-green-600">$<%= vehicle.price %><span class="text-lg font-normal text-gray-600">/day</span></div>
            <div class="mt-2 flex items-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium <%= vehicle.isAvailable ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= vehicle.isAvailable ? 'Available' : 'Currently Booked' %>
              </span>
            </div>
          </div>
        </div>
        
        <div class="border-t border-b py-6 mb-6">
          <h2 class="text-xl font-bold mb-4">Description</h2>
          <p class="text-gray-700"><%= vehicle.description %></p>
        </div>
        
        <div class="border-b pb-6 mb-6">
          <h2 class="text-xl font-bold mb-4">About the Company</h2>
          <div class="flex items-start">
            <% if (vehicle.companyId.logo) { %>
              <img src="/<%= vehicle.companyId.logo %>" alt="<%= vehicle.companyId.name %>" class="w-16 h-16 object-cover rounded-full mr-4">
            <% } else { %>
              <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center text-gray-500 mr-4">
                <%= vehicle.companyId.name.charAt(0).toUpperCase() %>
              </div>
            <% } %>
            <div>
              <h3 class="font-bold text-lg"><%= vehicle.companyId.name %></h3>
              <p class="text-gray-600"><%= vehicle.companyId.address %></p>
              <p class="text-gray-700 mt-2"><%= vehicle.companyId.description %></p>
            </div>
          </div>
        </div>
        
        <% if (isAuthenticated && userVerified && vehicle.isAvailable) { %>
          <div>
            <h2 class="text-xl font-bold mb-4">Book This Vehicle</h2>
            <form action="/book/<%= vehicle._id %>" method="POST">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <label for="pickupLocation" class="block text-gray-700 font-medium mb-2">Pick Up Location</label>
                  <select id="pickupLocation" name="pickupLocation" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <% locations.forEach(location => { %>
                      <option value="<%= location._id %>" <%= selectedPickup === location._id.toString() ? 'selected' : '' %>><%= location.name %></option>
                    <% }); %>
                  </select>
                </div>
                
                <div>
                  <label for="dropoffLocation" class="block text-gray-700 font-medium mb-2">Drop Off Location</label>
                  <select id="dropoffLocation" name="dropoffLocation" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <% locations.forEach(location => { %>
                      <option value="<%= location._id %>" <%= selectedDropoff === location._id.toString() ? 'selected' : '' %>><%= location.name %></option>
                    <% }); %>
                  </select>
                </div>
                
                <div>
                  <label for="startDate" class="block text-gray-700 font-medium mb-2">Start Date</label>
                  <input type="date" id="startDate" name="startDate" value="<%= startDate %>" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                
                <div>
                  <label for="endDate" class="block text-gray-700 font-medium mb-2">End Date</label>
                  <input type="date" id="endDate" name="endDate" value="<%= endDate %>" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
              </div>
              
              <div class="bg-gray-50 p-4 rounded-lg mb-4">
                <h3 class="font-semibold mb-2">Price Summary</h3>
                <div class="space-y-1 text-sm">
                  <div class="flex justify-between">
                    <span>Price per day:</span>
                    <span>$<%= vehicle.price.toFixed(2) %></span>
                  </div>
                  <div class="flex justify-between">
                    <span>Number of days: <span id="numDays">1</span></span>
                    <span>$<span id="subtotal"><%= vehicle.price.toFixed(2) %></span></span>
                  </div>
                  <div class="flex justify-between">
                    <span>Tax (18%):</span>
                    <span>$<span id="tax"><%= (vehicle.price * 0.18).toFixed(2) %></span></span>
                  </div>
                  <div class="flex justify-between font-bold pt-1 border-t">
                    <span>Total:</span>
                    <span>$<span id="total"><%= (vehicle.price * 1.18).toFixed(2) %></span></span>
                  </div>
                </div>
              </div>
              
              <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Proceed to Payment</button>
            </form>
          </div>
        <% } else if (isAuthenticated && !userVerified) { %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  You need to verify your account before booking vehicles.
                  <a href="/verification" class="font-medium underline text-yellow-700 hover:text-yellow-600">
                    Verify now
                  </a>
                </p>
              </div>
            </div>
          </div>
        <% } else if (!isAuthenticated) { %>
          <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-blue-700">
                  Please <a href="/login" class="font-medium underline text-blue-700 hover:text-blue-600">login</a> or <a href="/register" class="font-medium underline text-blue-700 hover:text-blue-600">register</a> to book this vehicle.
                </p>
              </div>
            </div>
          </div>
        <% } else if (!vehicle.isAvailable) { %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  This vehicle is currently booked. Please check back later or browse other available vehicles.
                </p>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>
  
  <%- include('partials/footer') %>
  
  <script>
    function changeImage(src, element) {
      document.getElementById('mainImage').src = '/' + src;
      
      // Update border for all thumbnails
      document.querySelectorAll('[onclick^="changeImage"]').forEach(btn => {
        btn.classList.remove('border-blue-500');
        btn.classList.add('border-white');
      });
      
      // Add border to selected thumbnail
      element.classList.remove('border-white');
      element.classList.add('border-blue-500');
    }
    
    // Set minimum dates for booking
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date();
      const tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      
      const startDateInput = document.getElementById('startDate');
      const endDateInput = document.getElementById('endDate');
      
      if (startDateInput && endDateInput) {
        // Format date as YYYY-MM-DD
        const formatDate = (date) => {
          const year = date.getFullYear();
          const month = String(date.getMonth() + 1).padStart(2, '0');
          const day = String(date.getDate()).padStart(2, '0');
          return `${year}-${month}-${day}`;
        };
        
        startDateInput.min = formatDate(today);
        
        startDateInput.addEventListener('change', function() {
          const selectedDate = new Date(this.value);
          const nextDay = new Date(selectedDate);
          nextDay.setDate(nextDay.getDate() + 1);
          
          endDateInput.min = formatDate(nextDay);
          
          // If end date is before start date, reset it
          if (new Date(endDateInput.value) <= selectedDate) {
            endDateInput.value = formatDate(nextDay);
          }
          
          updatePriceSummary();
        });
        
        endDateInput.addEventListener('change', function() {
          updatePriceSummary();
        });
        
        // Initial price calculation
        updatePriceSummary();
      }
    });
    
    function updatePriceSummary() {
      const startDate = new Date(document.getElementById('startDate').value);
      const endDate = new Date(document.getElementById('endDate').value);
      const pricePerDay = <%= vehicle.price %>;
      
      // Calculate number of days
      const timeDiff = Math.abs(endDate.getTime() - startDate.getTime());
      const numDays = Math.ceil(timeDiff / (1000 * 3600 * 24));
      
      // Calculate costs
      const subtotal = pricePerDay * numDays;
      const tax = subtotal * 0.18;
      const total = subtotal + tax;
      
      // Update the display
      document.getElementById('numDays').textContent = numDays;
      document.getElementById('subtotal').textContent = subtotal.toFixed(2);
      document.getElementById('tax').textContent = tax.toFixed(2);
      document.getElementById('total').textContent = total.toFixed(2);
    }
  </script>
</body>
</html>
